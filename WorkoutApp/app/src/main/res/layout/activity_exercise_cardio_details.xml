<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context="com.example.sebnem.workoutapp.ExerciseDetailsPage">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar" />

    <TextView
        android:id="@+id/textID3"
        android:layout_width="198dp"
        android:layout_height="31dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/borders"
        android:paddingTop="4dp"
        android:text="Exercise distance"
        android:textAlignment="textStart"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textID9" />

    <TextView
        android:id="@+id/textID9"
        android:layout_width="119dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:text="Distance"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textID3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textID170" />

    <TextView
        android:id="@+id/textID140"
        android:layout_width="197dp"
        android:layout_height="134dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/borders"
        android:paddingTop="4dp"
        android:text="Exercise Description"
        android:textSize="14sp"
        android:scrollbars = "vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textID120" />

    <TextView
        android:id="@+id/textID20"
        android:layout_width="146dp"
        android:layout_height="70dp"
        android:layout_marginTop="76dp"
        android:text="Exercise Name"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textID120"
        android:layout_width="119dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:text="Description"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textID140"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textID110" />

    <TextView
        android:id="@+id/textID110"
        android:layout_width="198dp"
        android:layout_height="31dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/borders"
        android:paddingTop="4dp"
        android:text="Exercise Type"
        android:textAlignment="textStart"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textID100" />

    <TextView
        android:id="@+id/textID100"
        android:layout_width="119dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:text="Type"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textID110"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textID160"
        android:layout_width="198dp"
        android:layout_height="31dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/borders"
        android:paddingTop="4dp"
        android:text="Exercise equipment"
        android:textAlignment="textStart"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textID170" />

    <TextView
        android:id="@+id/textID170"
        android:layout_width="119dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:text="Equipment"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textID160"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textID140" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/yogamatt" />

    <Button
        android:id="@+id/removeExCardio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#e85858"
        android:text="Remove Exercise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textID9"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>