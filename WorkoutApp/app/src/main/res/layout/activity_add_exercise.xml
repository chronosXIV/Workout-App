<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />

    <TextView
        android:id="@+id/exName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Name:"
        app:layout_constraintBottom_toBottomOf="@+id/exName_input"
        app:layout_constraintEnd_toStartOf="@+id/exName_input"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/exName_input"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/exDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:text="Description:"
        app:layout_constraintBottom_toBottomOf="@+id/exDesc_input"
        app:layout_constraintEnd_toStartOf="@+id/exDesc_input"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/exEquip_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exDesc_input" />

    <EditText
        android:id="@+id/exDesc_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exName_input" />

    <TextView
        android:id="@+id/exEquip"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:text="Equipment:"
        app:layout_constraintBottom_toBottomOf="@+id/exEquip_input"
        app:layout_constraintEnd_toStartOf="@+id/exEquip_input"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/action_add_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Add Exercise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/exC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="C:"
        app:layout_constraintBottom_toBottomOf="@+id/exC_input"
        app:layout_constraintEnd_toStartOf="@+id/exC_input"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/exC_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exEquip_input" />

    <TextView
        android:id="@+id/exTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Time:"
        app:layout_constraintBottom_toBottomOf="@+id/exTime_input"
        app:layout_constraintEnd_toStartOf="@+id/exTime_input"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/exTime_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exC_input" />

    <TextView
        android:id="@+id/exDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Distance:"
        app:layout_constraintBottom_toBottomOf="@+id/exDistance_input"
        app:layout_constraintEnd_toStartOf="@+id/exDistance_input"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/exDistance_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exTime_input" />

</android.support.constraint.ConstraintLayout>